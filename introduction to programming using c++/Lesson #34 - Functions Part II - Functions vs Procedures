//Q1 : 
#include <iostream>
#include <string>

using namespace std;

void MyProcedures()
{
	int Num1, Num2;

	cout << "Please enter Number1 : "; cin >> Num1;
	cout << "Please enter Number2 : "; cin >> Num2;
	cout << "***************************************\n";
	cout << Num1 + Num2;

}


int main()
{
	MyProcedures();
	

  return 0;
}

