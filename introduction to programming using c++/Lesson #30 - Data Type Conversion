// Q1 : Conbert string st1 = "43.22" to double,float,and int

#include <iostream>
#include <string>
using namespace std;

int main()
{
	string st1 = "43.22";

	double str_to_double = stod(st1);
	float str_to_float = stof(st1);
	int str_to_int = stoi(st1);

	cout << "double = " << str_to_double << endl;
	cout << "float = " << str_to_float << endl;
	cout << "int = " << str_to_int << endl;


  return 0;
}

