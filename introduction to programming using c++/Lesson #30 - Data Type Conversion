// Q2 : Conbert integer N1 = 20 to string

#include <iostream>
#include <string>
using namespace std;

int main()
{
	int N1 = 20;

	string int_to_str = to_string(N1);
	
	cout << "string = " << int_to_str << endl;

  return 0;
}

