// Q4 : Conbert float N3 = 55.23 to string,and inter.

#include <iostream>
#include <string>
using namespace std;

int main()
{
	float N3 = 55.23;

	string float_to_str = to_string(N3);
	int float_to_int_1 = N3;
	int float_to_int_2 = (int)N3;
	int float_to_int_3 = int(N3);

	cout << "string = " << float_to_str << endl;
	cout << "string = " << float_to_int_1 << endl;
	cout << "string = " << float_to_int_2 << endl;
	cout << "string = " << float_to_int_3 << endl;


  return 0;
}


