//Q3 :

#include <iostream>
using namespace std;


int main()
{
	
	short Age=25;
	short add_to_age = 5;
	
	cout << "after "<< add_to_age <<" years you will be "<< Age + add_to_age <<" years old"<<endl;
	
	
	return 0;
}

