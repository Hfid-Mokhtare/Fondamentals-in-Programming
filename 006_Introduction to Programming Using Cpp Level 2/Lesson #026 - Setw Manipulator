#include <iostream>
#include <iomanip> // this library stored the std::setw
using namespace std;


int main()
{
	
	
	cout << "+------------+--------------------------------+------------+ \n";
	cout << "|    Code    |              Name              |     Mark   | \n";
	cout << "+------------+--------------------------------+------------+ \n";


	cout << "|" << setw(12) << "C101" << "|" << setw(32) << "C++ level 1" << "|" << setw(12) << "90" << "| \n";
	cout << "|" << setw(12) << "C102" << "|" << setw(32) << "Algorithme level 1" << "|" << setw(12) << "80" << "| \n";
	cout << "|" << setw(12) << "C103234" << "|" << setw(32) << "Reverse engineering" << "|" << setw(12) << "70" << "| \n";

	cout << "+------------+--------------------------------+------------+ \n";



	return 0;
}
