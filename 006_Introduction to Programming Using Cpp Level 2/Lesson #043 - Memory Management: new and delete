#include <iostream>

using namespace std;


int main()
{
	//declare an int pointer
	int* ptr1;

	//declare an float pointer
	float* ptr2;

	//dynamically allocate memory
	ptr1 = new int;
	ptr2 = new float;

	//assigning values to the memory
	*ptr1 = 10;
	*ptr2 = 20;

	cout << "address : " << endl;

	cout << *ptr1 << endl;
	cout << *ptr2 << endl;


	//delete the memory
	delete ptr1;
	delete ptr2;

	
	return 0;
}
