#include <iostream>
using namespace std;

void MyFunc()
{
	int Number = 1;

	cout << "Number Value = " << Number << endl;
	Number++;
}

void MyFuncstatic()
{
	static int Number = 1;

	cout << "Number Value = " << Number << endl;
	Number++;
}



int main()
{
	cout << "Withe out using static variable : \n";

	MyFunc();
	MyFunc();
	MyFunc();

	cout << "\n Withe using static variable : \n";

	MyFuncstatic();
	MyFuncstatic();
	MyFuncstatic();


	return 0;
}
